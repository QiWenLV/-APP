<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:descendantFocusability="blocksDescendants"
    tools:context="com.zqw.secrect.MainActivity">

    <ImageButton
        android:id="@+id/img_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_alignParentLeft="true"
        android:focusable="false"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:id="@+id/img_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/img_share"
        android:focusable="false"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:id="@+id/img_fabulous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/img_collection"
        android:focusable="false"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_item_num_fabilous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_toRightOf="@id/img_fabulous"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:id="@+id/img_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/tv_item_num_fabilous"
        android:focusable="false"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_item_num_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_toRightOf="@id/img_comment"
        android:layout_centerVertical="true"/>

</RelativeLayout>
