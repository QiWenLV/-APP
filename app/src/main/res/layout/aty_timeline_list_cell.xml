<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.zqw.secrect.MainActivity">

    <LinearLayout
        android:id="@+id/lin_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/head_portrait"
            />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="匿名用户"/>


    </LinearLayout>

    <TextView
        android:id="@+id/tvCellLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"/>


    <View
        android:layout_width="2px"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:background="@color/Separated" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants">

        <ImageButton
            android:id="@+id/img_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_alignParentLeft="true"
            android:focusable="false"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:id="@+id/img_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/img_share"
            android:focusable="false"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:id="@+id/img_fabulous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/img_collection"
            android:focusable="false"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_item_num_fabilous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_toRightOf="@id/img_fabulous"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:id="@+id/img_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/tv_item_num_fabilous"
            android:focusable="false"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_item_num_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_toRightOf="@id/img_comment"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


</LinearLayout>
